{
  "name": "serverless-stack",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "www"
    ]
  },
  "scripts": {
    "watch": "tsc -b -w",
    "build": "turbo run build --filter=!@serverless-stack/docs --filter=!@serverless-stack/console",
    "release": "yarn build && yarn changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serverless-stack/serverless-stack.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@types/jest": "^27.4.1",
    "jest": "27.5.1",
    "prettier": "^2.2.1",
    "ts-jest": "27.1.3",
    "turbo": "^1.2.8",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
