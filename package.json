{
  "name": "serverless-stack",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/cli/test/*",
      "packages/static-site-env/test/*",
      "www"
    ]
  },
  "scripts": {
    "lint": "eslint . --fix --ext .js,.ts",
    "watch": "tsc -b -w",
    "prettier": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "changelog": "lerna-changelog",
    "release": "lerna publish --force-publish",
    "release-canary": "lerna publish --canary patch --exact --preid next --dist-tag=next --force-publish=*",
    "clean": "lerna run clean",
    "depcheck": "for I in packages/*/; do cd $I; npx depcheck; cd -; done",
    "postinstall": "lerna run prepare --scope='{@serverless-stack/core,@serverless-stack/resources,@serverless-stack/cli,create-sst}'",
    "test": "lerna run prepare && lerna run test --stream --scope='{@serverless-stack/core,@serverless-stack/resources,@serverless-stack/cli,@serverless-stack/static-site-env}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serverless-stack/serverless-stack.git"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.11.3",
    "@babel/eslint-plugin": "^7.11.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^4.15.1",
    "depcheck": "^1.3.1",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^4.3.6",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
