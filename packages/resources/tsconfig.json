{
  "compilerOptions": {
    "lib": ["es2019"],
    "outDir": "dist",
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
